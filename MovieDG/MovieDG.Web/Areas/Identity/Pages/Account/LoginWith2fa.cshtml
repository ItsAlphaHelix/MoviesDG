@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<link rel="stylesheet" type="text/css" href="~/css/identity.css" />

<div class="login-dark">
    <div class="navbar-wrap main-menu d-none d-lg-flex">
        <ul class="navigation">
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Back To Home</a></li>
        </ul>
    </div>
    <br />
    <br />
    <p style="text-align: center; font-size: 20px; color: white;">Your login is protected with an authenticator app. Enter your authenticator code below.</p>
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="illustration"><i class="icon ion-ios-locked-outline"></i></div>
             <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Input.TwoFactorCode" type="text" class="form-control" placeholder="Authenticator code" />
                <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Log In</button>
             </div>
        <a asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">log in with a recovery code</a>
     </form>
 </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}