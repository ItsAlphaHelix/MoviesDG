@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}

<link rel="stylesheet" type="text/css" href="~/css/identity.css" />

<div class="login-dark">
    <div class="navbar-wrap main-menu d-none d-lg-flex">
        <ul class="navigation">
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Back To Home</a></li>
        </ul>
    </div>
    <br />
    <br />
    <p style="text-align: center; font-size: 20px; color: white;">
        You have requested to log in with a recovery code. This login will not be remembered until you provide
        an authenticator app code at log in or disable 2FA and log in again.
    </p>
    <form method="post">
        <div class="illustration"><i class="icon ion-ios-locked-outline"></i></div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Input.RecoveryCode" type="text" class="form-control" placeholder="Recovery code" />
            <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">Log In</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
