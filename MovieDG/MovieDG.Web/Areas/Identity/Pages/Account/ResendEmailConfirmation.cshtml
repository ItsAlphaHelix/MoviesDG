@page
@model ResendEmailConfirmationModel

@{
    ViewData["Title"] = "Resend email confirmation?";
}

<link rel="stylesheet" type="text/css" href="~/css/identity.css" />

<div class="login-dark">
    <div class="navbar-wrap main-menu d-none d-lg-flex">
        <ul class="navigation">
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Back To Home</a></li>
        </ul>
    </div>
    <form method="post">
        <h2 class="sr-only">@ViewData["Title"]</h2>
        <div class="illustration"><i class="icon ion-ios-locked-outline"></i></div>
        <div class="form-group">
            <input asp-for="Input.Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Input.Email" class=" text-danger"></span>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">Resend</button>
        </div>
    </form>
</div>