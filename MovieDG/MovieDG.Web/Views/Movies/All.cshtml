@using MovieDG.Services.Models.Movies
@model IEnumerable<MovieViewModel>

@{
    this.ViewData["Title"] = "Movies";
}

<section class="top-rated-movie tr-movie-bg" data-background="/images/tr_movies_bg.jpg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="section-title text-center mb-50">
                    <h2 class="title">All Movies</h2>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="tr-movie-menu-active text-center">
                    <button class="active" data-filter="*">Top Rating</button>
                    <button class="" data-filter=".cat-one">Popularity</button>
                    <button class="" data-filter=".cat-two">Recent</button>
                </div>
            </div>
        </div>
        <div class="row tr-movie-active">
            @foreach (var movie in Model)
            {
                <div class="col-xl-3 col-lg-4 col-sm-6 grid-item grid-sizer cat-two">
                    <div class="movie-item mb-60">
                        <div class="movie-poster">
                            <a asp-action="Details" asp-route-id="@movie.Id"><img src="@movie.Poster" alt=""></a>
                        </div>
                        <div class="movie-content">
                            <div class="top">
                                <h5 class="title"><a href="movie-details.html">@movie.Title</a></h5>
                                <span class="date">@movie.ReleaseDate.Year</span>
                            </div>
                            <div class="bottom">
                                <ul>
                                    <li><span class="quality">hd</span></li>
                                    <li>
                                        <span class="duration"><i class="far fa-clock"></i> @movie.Runtime min</span>
                                        <span class="rating"><i class="fas fa-thumbs-up"></i> @movie.AverageVotes</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>